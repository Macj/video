= form_for(@video_file) do |f|
  .field
    = f.label :title
    = f.text_field :title, :value => @title
  .field
    = f.label :description
    = f.text_area :description, :value => @description

  .p
    Preview
  - if @video_file.youtube
    .p
      %iframe{:width => "300", :height => "169", :src => "//www.youtube.com/embed/#{@video_file.player}", :frameborder => "0", :allowfullscreen => true}
  - elsif @video_file.vimeo
    .p
      %iframe{:src => "//player.vimeo.com/video/#{@video_file.player}", :width => "300", :height => "169", :frameborder =>"0", :webkitallowfullscreen => true, :mozallowfullscreen => true, :allowfullscreen => true}
  - elsif @video_file.vk?
    .p
      %iframe{:src => "#{@video_file.player}", :width => "300", :height => "169", :frameborder => "0"}

  .actions
    = f.submit "Редактировать"