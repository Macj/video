- if @video_files.count > 0
  %ul
    - @video_files.each do |file|
      %li= link_to file.title, video_file_path(file)
      - if file.player
        - id = "playerLh7786aL_" + "#{file.id}"
        .div{:id => "playerLh7786aL_" + "#{file.id}"}
          %script{:type=>'text/javascript'}
            = "jwplayer('#{id}').setup({ file: '#{file.video_url}', width: '25%', aspectratio: '16:9', fallback: 'false', primary: 'flash'});".html_safe
          %p
            = link_to "Редактировать", edit_video_file_path(file)
        
- else
  %p На данный момент объектов нет.