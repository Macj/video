.container
  %p.title
    %strong
    = @video_file.title
  %p
  - if @video_file.player?
    - if @video_file.youtube?
      %iframe{:width => "300", :height => "169", :src => "//www.youtube.com/embed/#{@video_file.player}", :frameborder => "0", :allowfullscreen => true}
    - elsif @video_file.vimeo?
      %iframe{:src => "//player.vimeo.com/video/#{@video_file.player}", :width => "300", :height => "169", :frameborder =>"0", :webkitallowfullscreen => true, :mozallowfullscreen => true, :allowfullscreen => true}
    - elsif @video_file.vk?
      %iframe{:src => "#{@video_file.player}", :width => "300", :height => "169", :frameborder => "0"}

  %p.description
    %strong
    = @video_file.description

  %p
    %strong
      Ссылка:
    = link_to @video_file.url, @video_file.url

  %p
    - if current_user != nil
      - if @video_file.user_id == current_user.id
        = link_to "Редактировать", edit_video_file_path(@video_file)

  %p
    = link_to "Остальные видео", root_path

    %script{:type=>'text/javascript'}
      = "jwplayer('playerLh7786aL').setup({ file: '#{@video_file.video_url}', image: '#{@video_file.image_url}', width: '50%', aspectratio: '16:9', fallback: 'false', primary: 'flash'});".html_safe